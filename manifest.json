{
  "manifest_version": 2,

  "name": "One-click Kittens",
  "description": "This extension demonstrates a browser action with kittens.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs", 
    "http://*/*", "https://*/*", "<all_urls>", "background"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}